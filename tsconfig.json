{
  "compilerOptions": {
    "watch": true,
    "lib": [
      "dom",
      "es6",
      "es2017"
    ],
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "~app/*": ["src/app/*"],
      "~cloudflare-worker/*": ["src/cloudflare-worker/*"],
      "~service-worker/*": ["src/service-worker/*"]
    }
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}